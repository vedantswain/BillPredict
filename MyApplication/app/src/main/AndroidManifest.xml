<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.ac.iiitd.zenatix.billpredict" >

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainTabActivity"
            android:label="@string/title_activity_main_tab" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainTabActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.ac.iiitd.zenatix.billpredict.MainTabActivity" />
        </activity>

        <receiver
            android:name=".Receivers.ReminderAlarmReceiver"
            android:enabled="true"
            android:exported="true" >
        </receiver>

        <activity
            android:name=".MenuActivities.HelpActivity"
            android:label="@string/title_activity_help"
            android:parentActivityName=".MainTabActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.ac.iiitd.zenatix.billpredict.MainTabActivity" />
        </activity>
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/title_activity_splash_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuActivities.AboutActivity"
            android:label="@string/title_activity_about" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.ac.iiitd.zenatix.billpredict.MainTabActivity" />
        </activity>

        <receiver
            android:name=".Receivers.BootReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".HistoryActivity"
            android:label="@string/title_activity_history"
            android:parentActivityName=".MainTabActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.ac.iiitd.zenatix.billpredict.MainTabActivity" />
        </activity>
        <activity
            android:name=".DailyAverageActivity"
            android:label="@string/title_activity_graph"
            android:parentActivityName=".MainTabActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.ac.iiitd.zenatix.billpredict.MainTabActivity" />
        </activity>
        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="dce86a0295afcc52a5bafc956c09b77700d85b06" />
    </application>

</manifest>
